<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.bmob.im.demo.ui.FindPassword">


    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <LinearLayout style="@style/Register_Input" >
        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="密码"
            android:textStyle="bold" />
        <EditText
            android:singleLine="true"
            android:inputType="textPassword"
            android:id="@+id/et_find_password"
            style="@style/Register_Edit"
            android:hint="@string/login_username_hint" />
    </LinearLayout>


    <LinearLayout style="@style/Register_Input" >
        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="确认密码"
            android:textStyle="bold" />
        <EditText
            android:singleLine="true"
            android:inputType="textPassword"
            android:id="@+id/et_find_password_again"
            style="@style/Register_Edit"
            android:hint="@string/login_username_hint" />
    </LinearLayout>

    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_find_password"
        android:hint="输入您的密码"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="确认密码"
        android:id="@+id/et_find_password_again" />-->
    <LinearLayout style="@style/Register_Input" >
        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="手机号"
            android:textStyle="bold" />
        <EditText
            android:singleLine="true"
            android:id="@+id/et_phone_for_pwd"
            style="@style/Register_Edit"
            android:hint="@string/login_username_hint" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="@dimen/base_action_bar_height"
            android:background="@drawable/base_edit_input"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/register_margin"
            android:layout_marginLeft="@dimen/register_margin"
            android:layout_marginRight="@dimen/register_margin"
            android:orientation="horizontal" >
            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="验证码"
                android:textStyle="bold" />
            <EditText style="@style/Register_Edit"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/et_verify_code_for_pwd"
                android:hint="请输入手机验证码"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_verify_code_for_find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:layout_marginTop="@dimen/register_margin"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_find_pwd"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/btn_login_selector"
        android:text="找回密码"
        android:textColor="@color/base_color_text_white"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>
